<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd">
    <!-- Import application-context.xml to reuse beans -->
    <import resource="application-context.xml"/>

    <!-- Define savingAccount1 with initial balance of 1000 -->
    <bean id="savingAccount1" class="com.luxoft.bankapp.model.SavingAccount">
        <constructor-arg value="1000" />
    </bean>


    <!-- Define checkingAccount1 with overdraft value of 1000 -->
    <bean id="checkingAccount1" class="com.luxoft.bankapp.model.CheckingAccount">
        <constructor-arg value="1000" />
    </bean>

    <!-- Define client1 with name Jonny Bravo and other properties -->
    <bean id="client1" class="com.luxoft.bankapp.model.Client">
        <property name="name" value="${client1}"/>
        <property name="city" value="${client1.city}"/>
        <property name="gender">
            <value type="com.luxoft.bankapp.model.Client$Gender">MALE</value>
        </property>
        <property name="repository" ref="repository"/> <!-- Refers to clientRepository from application-context.xml -->
        <property name="accounts">
            <list>
                <ref bean="savingAccount1"/>
                <ref bean="checkingAccount1"/>
            </list>
        </property>
    </bean>



    <!-- Define checkingAccount2 with overdraft value of 1500 -->
    <bean id="checkingAccount2" class="com.luxoft.bankapp.model.CheckingAccount">
        <constructor-arg value="1500" />
    </bean>

    <!-- Define client2  -->
    <bean id="client2" class="com.luxoft.bankapp.model.Client">
        <property name="name" value="${client2}"/>
        <property name="city" value="${client2.city}"/>
        <property name="gender">
            <value type="com.luxoft.bankapp.model.Client$Gender">MALE</value>
        </property>
        <property name="repository" ref="repository"/> <!-- Refers to clientRepository from application-context.xml -->
        <property name="accounts">
            <list>
                <ref bean="checkingAccount2"/>
            </list>
        </property>
    </bean>

    <bean class="org.springframework.context.support.PropertySourcesPlaceholderConfigurer">
        <property name="location" value="classpath:clients.properties"/>
    </bean>


</beans>
